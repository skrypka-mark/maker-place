 <!doctype html>
 <html lang = "en">
	<head>
		<!-- Required meta tags -->
		<meta charset = "utf-8">
		<meta name = "viewport" content = "width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Bootstrap CSS -->
		<link rel = "stylesheet" href = "/bootstrap/css/bootstrap.min.css">

		<title> My blog </title>
	</head>
	<body class = "bg-dark bg-image" style="background-image: url(/images/BG7.jpg); background-attachment: fixed; background-repeat: no-repeat; background-size: cover; ">
		<div class = "container">
			<% include('partials/navbar.ejs') %>
			<div class="jumbotron">
				<div>
					<img src = "/user_images/<%- orders["avatar"] %>" alt = "Avatar" style="width:30px; height:30px; border-radius:90%"/>
					<a href = "/profile/<%- orders["author_id"] %>"><%- orders["username"] %></a>
				</div>
				
				<div>
					<h1> <%- orders["title"] %></h1>
				</div>
				<div>
					<a href = "<%- orders["link"] %>" class="nav-link active" aria-current="page">Link to the model</a>
				</div>
				<div>
					<h5> Material: <%- orders["material"] %></h5>
					<h5> Layer height: <%- orders["layer"] %>mm</h5>
					<h5> Infill: <%- orders["infill"] %>%</h5>
					<p><%- orders["comment"] %></p>
				</div>
					
			
				<h2 class="bg-secondary text-light" >Comments</h2>
					
					<% comments.forEach(function(comments) { %>
							<tr>
								<div class="row">
									<div class="col-sm-1"></div>
									<% if ( currentUser.id == comments["commentator_id"]) { %><div class="col-sm-4"></div><%}%>
									<div class="col-sm-5">
										<div class="card border-primary mb-4" >
											<div class="card-header">
												<img src = "/user_images/<%- comments["avatar"] %>" alt = "Avatar" style="width:30px; height:30px; border-radius:90%"/>
												<a href = "/profile/<%- comments["commentator_id"] %>"><%- comments["username"] %></a>
											</div>
											<div class="card-body text-dark">
												<p class="card-text text-dark"><%- comments["comment"] %></p>
											</div>
										</div>
									</div>
								</div>
							</tr>
					<% }) %>

			
				<form method = "post" action = "/order/<%- orders["order_id"] %>/comment">
					<div class="form-group row" >
						
						<div class="col-md-10">
							<input type="text" id="comment" class = "form-control " name="comment" required autofocus>
						</div>
						<button type = "submit" class = "btn btn-primary col-md-2" >Send</button>
					</div>
					
				</form>
			</div>
	
		</div>	


		<!-- JavaScript -->
		<script src = "/jquery/jquery.min.js"></script>
		<script src = "/bootstrap/js/bootstrap.min.js"></script>
	</body>
</html>
